        <div class="col-md-6 offset-md-3">
        
        <div class="card bg-dark text0light">
        <div class="card-header">
                <div class="h1 h4 text-white">
                        Contacts List
                </div>
        </div>

        </div>

        <div class="card-body">
                
                        <h1>CONTACTS</h1>

                <ul>
                        {{#each contacts}}
                        <li>
                                <h3>{{firstname}} {{lastname}}</h3>
                                <p>{{email}}</p>
                                <p>{{phone}}</p>

                        <a href="/delete-contact/{{id}}">Delete</a>
                        <a href="/edit-contact/{{id}}">Edit Contact</a>

                        </li>
                        {{/each}}


        </ul>
        </div>

        <form action="{{#unless contact.id}}/new-contact{{else}}/update-contact/{{contact.id}}{{/unless}}" method="POST">


                <div>     
                        <label for="firstname">First Name:</label>
                        <input type="text" name="firstname"  placeholder="First Name" id="firstname" value="{{contact.firstname}}">
                </div>

                <div>
                        <label for="lastname">Last Name:</label>
                        <input type="text" name="lastname" placeholder="Last Name" id="lastname" value="{{contact.lastname}}">
                </div>

                <div>
                        <label for="email">Email:</label>
                        <input type="text" name="email" placeholder="Email" id="email" value="{{contact.email}}">
                </div>

                <div>
                        <label for="phone">Phone:</label>
                        <input type="text" name="phone" placeholder="Phone" id="phone" value="{{contact.phone}}">
                </div>
                        <button>Submit</button>
        

        </form>
        </div> 